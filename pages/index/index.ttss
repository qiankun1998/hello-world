.container {
  width:750rpx; 
  height:750rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;   /* 水平居中 */
  align-items: flex-start;   /* 垂直方向从顶部开始 */
  /* height: 100vh;             */
  /* 使容器高度为视口高度 */
}

.div_0 {
  font-weight: bold;
  text-align: center;
}

.nickname {
  /* justify-content: center; */
  overflow: hidden; /* 隐藏溢出的内容 */
  height: 70rpx;
  align-items: center;
  display: flex;
  justify-content: center; /* 水平居中 */
  text-align: center; /* 对文本的多行居中生效 */
}


.scroll-view-space {
  overflow: hidden; /* 隐藏溢出的内容 */
  background-color: #ffffff;
  width:700rpx; 
  border-radius: 20rpx;
  border: 4rpx solid #ff0000; /* 设置边框宽度、样式和颜色 */
  }

.modal {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius: 20rpx;
}



.button-group {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.modal-button {
  background-color: #f0f0f0;
  padding: 2rpx 20rpx;
  border-radius: 10rpx;
}

.selected {
  background-color: #f0f0f0;
}

.modal-footer {
  display: flex;
  justify-content: center;

  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.confirm-button {
  height: 80rpx;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  background-color: #ff4757;
  color: white;
  border-radius: 10rpx;
  text-align: center; /* 对文本的多行居中生效 */
  /* height: 80rpx; */
}





