	position:absolute;
	left:0rpx;
	top:0rpx;
	font-family:PingFang SC;
	text-align:left;
	font-size:30rpx;
	letter-spacing:0;
}

.clear_button {
  margin-top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 610rpx;
  top: 1rpx;
  z-index: 8; /* 确保按钮在其他元素之上，从而保证可点击*/
}

.gift-selector {
  padding: 16rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  cursor: pointer;
  margin-bottom: 20rpx;
}

.selected-gift {
  display: flex;
  align-items: center;
}

.gift-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.gift-name {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.gift-value {
  font-size: 24rpx;
  color: #888;
}

.picker-container {
  position: absolute;
  background-color: #fff;
  width: 100%;
  z-index: 10;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.picker-options {
  padding: 16rpx;
}

.picker-option {
  display: flex;
  align-items: center;
  padding: 10rpx;
  cursor: pointer;
}

.picker-option:hover {
  background-color: #f0f0f0; /* Hover effect */
}




.modal-header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-content {
  flex: 1;
}

.button-group {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.modal-button {
  background-color: #f0f0f0;
  padding: 2rpx 20rpx;
  border-radius: 10rpx;
}

.selected {
  background: rgba(254, 44, 85, 0.06);
  border: 2rpx solid #fe2c55;
  border-radius: 8rpx;
  color: #FF3D3D;

}

.modal-footer {
  display: flex;
  justify-content: center;

  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.confirm-button {
  height: 80rpx;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  background-color: #ff4757;
  color: white;
  border-radius: 10rpx;
  text-align: center; /* 对文本的多行居中生效 */
  /* height: 80rpx; */
}


.page-add-todo {
    display: flex;
    flex: 1;
    flex-direction: column;
  }
  
  .add-todo {
    padding: 80rpx;
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .add-todo-input {
    display: block;
    font-size: 40rpx;
    font-weight: 100;
    /* padding: 5px 5px; */
    background: none;
    border: none;
    border-bottom: 2rpx solid #dfdfdf;
    color: #000000;
    /* width: 100%; */
  }
  
