body {
  /* font-family: 'PingFang SC'; */
  font-style: normal;
  font-weight: 400;
}


.container {
  /* .container { */
    width: 100vw; /* 使用屏幕宽度的百分比 */
    height: 100vh; /* 使用屏幕高度的百分比 */
  /* } */
  
  background-color: #ffffff;
  display: flex;
  justify-content: center;   /* 水平居中 */
  align-items: flex-start;   /* 垂直方向从顶部开始 */
  /* height: 100vh;             */
  /* 使容器高度为视口高度 */
}

.div_0 {
  /* padding-left: 40rpx; */
  font-size: 40rpx;
  font-weight: normal;
  text-align: center;
}

.nickname {
  /* justify-content: center; */
  overflow: hidden; /* 隐藏溢出的内容 */
  height: 70rpx;
  align-items: center;
  display: flex;
  justify-content: center; /* 水平居中 */
  text-align: center; /* 对文本的多行居中生效 */
  font-weight: bold;
}


.scroll-view-space {
  overflow: hidden; /* 隐藏溢出的内容 */

  background-color: #ffffff;
  width:700rpx; 
  border-radius: 20rpx;
  border: 4rpx solid #ff0000; /* 设置边框宽度、样式和颜色 */
  }

.modal {
  align-items: flex-start; /* 标题和选择框左对齐 */
  display: flex;
  flex-direction: column;
  background-color: rgb(241, 241, 241);

}

.select_row {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--BG-BGPrimary, #ffffff);
  width: 700rpx;
  text-align: left;
  line-height: 36rpx;
  white-space: normal;
  color: var(--Text-TextTertiary, #16182399);
  font-family: "PingFang SC";
  font-size: 26rpx;
  font-weight: 400;
}

.select_title {
	background-color:rgba(255, 255, 255, 1);
	color:rgba(22, 24, 35, 0.6);
	width: 700rpx;
	height: 36rpx;
	/* position: absolute; */
  padding-left: 35rpx;
	left: 0rpx;
	padding-top: 20rpx;
	font-family: PingFang SC;
	text-align: left;
	font-size: 26rpx;
	letter-spacing: 0;
	font-weight: bold;
}

.select_area {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  padding: 8rpx 32rpx 0rpx;
  width: 660rpx;
  text-align: center;
  color: var(--Text-TextPrimary, #161823);
}


.label {
  flex-shrink: 0;
  min-width: 130rpx;
  vertical-align: top;
}



.option1,
.option2,
.option3,
.option4 {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #1618231f;
  border-radius: 8rpx;
  padding: 18rpx 24rpx;
  width: 112rpx;
  height: 36rpx;

}




